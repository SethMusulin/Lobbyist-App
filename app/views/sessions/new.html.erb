
<div class="users-sign-in">
<h1>Sign in</h1>
  <%= form_tag({:controller => :sessions, :action => :create}) do %>
      <div class="form-group">
        <%= label_tag :email, nil, class: "control-label" %>
        <div class="controls">
          <%= text_field_tag :email, nil, class: "form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, nil, class:"control-label" %>
        <div class="">
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
      </div>
      <div class="">
       <p></p> <%= submit_tag 'Login', :id => 'login_submit', class: "btn btn-large btn-primary" %></p>
      </div>
  <% end %>
  <p> <%= link_to 'Forgot password?', '/reset_passwords/new' %></p>
  <a href="/users">Register</a>
</div>

</div>